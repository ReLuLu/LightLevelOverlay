{
  "schemaVersion": 1,
  "id": "lightleveloverlay",
  "version": "${version}",

  "name": "LightLevelOverlay",
  "description": "A Minecraft client modification to use with FabricAPI. An experimental approach to visualize light levels on blocks to determine whether hostile mobs can spawn or not. ",
  "authors": [
    "ReLuLu"
  ],
  "contact": {
    "homepage": "https://github.com/ReLuLu/LightLevelOverlay/",
    "sources": "https://github.com/ReLuLu/LightLevelOverlay/"
  },

  "license": "CC0-1.0",
  "icon": "assets/lightleveloverlay/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "de.relulu.LightLevelOverlay.LiLeOvMain"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.15.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
